@page "/"

<PageTitle>Home</PageTitle>

<h1>AI Assistant</h1>

<div class="form-group">
    <label for="userInput">Enter your query:</label>
    <input type="text" id="userInput" @bind="userInput" class="form-control large-input" placeholder="Type your query here..." />
</div>

<button class="btn btn-primary" @onclick="InvokeSearchCommand">Submit</button>

<div class="mt-3">
    <h3>AI Agent Chat</h3>
    <div>
        @foreach (var message in chatMessages)
        {
            <p>@message</p>
        }
    </div>
</div>

@code {
    private string userInput;
    private List<string> chatMessages = new List<string>();

    private async Task InvokeSearchCommand()
    {
        // Create a new command with the user input
        var command = new SearchInCompanyStorageCommand(userInput, 10, new List<string>());

        // Use the mediator to send the command
        var result = await Mediator.Send(command);

        // Check the result and update the chat messages
        if (result.IsSuccess)
        {
            chatMessages.Add(result.Value);
        }
        else
        {
            chatMessages.Add($"Error: {result.Error.Message}");
        }
    }

    [Inject]
    private IMediator Mediator { get; set; }
}

<style>
    .large-input {
        width: 100%;
        height: 50px;
        font-size: 1.2em;
    }
</style>
